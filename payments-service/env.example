# ========================================
# FlowSync Payments Service - Environment Configuration
# ========================================

# --------------------------------------
# Visa Developer API Credentials
# --------------------------------------
# Get these from: https://developer.visa.com
# 1. Create a project
# 2. Select PAAI + Visa Direct APIs
# 3. Go to Credentials tab

VISA_API_KEY=your_api_key_here

# Shared Secret (optional - only needed for X-Pay-Token auth)
# If your project uses mTLS-only authentication, leave this blank
VISA_SHARED_SECRET=

VISA_BASE_URL=https://sandbox.api.visa.com

# Mock Mode (for demo/testing without real Visa API calls)
# Set to 'true' to use simulated responses, 'false' for real Visa API
VISA_MOCK_MODE=true


# --------------------------------------
# Visa Certificates (Two-Way SSL)
# --------------------------------------
# Download from Visa Developer Portal
# Place cert.pem and key.pem in ./certs/ directory

VISA_CERT_PATH=./certs/cert.pem
VISA_KEY_PATH=./certs/key.pem


# --------------------------------------
# Sandbox Test PANs
# --------------------------------------
# These are Visa test cards for sandbox
# Reference: https://developer.visa.com/capabilities/visa_direct/docs-test-data

# Project Wallet PAN (where stakes are held)
PROJECT_WALLET_PAN=4111111111111111
PROJECT_WALLET_EXPIRY=2025-12

# Focus Pool PAN (where unclaimed funds go)
POOL_ACCOUNT_PAN=4222222222222222
POOL_ACCOUNT_EXPIRY=2026-12


# --------------------------------------
# Database Configuration
# --------------------------------------
# SQLite database file location
DATABASE_URL=file:./dev.db


# --------------------------------------
# Server Configuration
# --------------------------------------
PORT=3001
NODE_ENV=development

